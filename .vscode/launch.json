{
    "version": "0.2.0",
    "configurations": [
      {
        "type": "node",
        "request": "launch",
        "name": "Launch Node-red",
        "runtimeExecutable": "npx",
        "runtimeArgs": [
          "node-red",
          "-s",
          "${workspaceFolder}/.vscode/settings.js"
        ],
        "cwd": "${env:HOME}",
        "outputCapture": "std",
        "env": {
          "NO_UPDATE_NOTIFIER": "1",
          // "DEBUG": "*"
        }
      },
      {
        "type": "node",
        "request": "launch",
        "name": "Debug Current File",
        "program": "${file}"
      },
      { "type": "node", "request": "attach", "name": "Attach to Process", "processId": "${command:PickProcess}" } 
      
    ]
  }
